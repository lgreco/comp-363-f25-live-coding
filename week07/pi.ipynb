   "source": [
    "import random, math\n",
    "\n",
    "N = 100_000_000 # number of trials\n",
    "\n",
    "hits = 1\n",
    "for i in range(N):\n",
    "    x = random.random()\n",
    "    y = random.random()\n",
    "    distance =math.sqrt(x*x+y*y)\n",
    "    if distance < 1:\n",
    "        hits += 1\n",
    "print(4*hits/N)"
   ]
  }
